@using FormsDemo.Models
@model IEnumerable<Zombie>
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <a asp-action="CreateZombie" asp-controller="Zombie">Create Zombie</a>

    @if (Model.Count() > 0||Model!=null)
    {
        <ul>
            @foreach (Zombie zed in Model)
            {
                if (zed != null)
                {
                    <li>
                        @zed.ToString()
                    </li>
                }
                else
                {
                    <li>Null Zed</li>
                }
            }
        </ul>
    }
    else
    {
        <h2>There are no Zeds to display</h2>
    }
</body>
</html>
